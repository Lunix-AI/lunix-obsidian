{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2022",
		"allowJs": true,
		"jsx": "react-jsx",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"paths": {
			"~/*": ["src/*"]
		},
		"types": ["./src/defs.html.d.ts"]
	},
	"include": ["scripts/**/*.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.html"]
}
